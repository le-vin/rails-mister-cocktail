<div class="banner">
  <div id="header">
    <h1>Cocktails</h1>
    <h2>to match your feelings</h2>
  </div>
</div>
<div class="container grid">
<% @cocktails.each do |c| %>
  <%= link_to cocktail_path(c),class: "link", :action => 'go' do %>
    <div class="card">
      <img src="https://source.unsplash.com/random" alt="random">
      <div class="cock">
        <h3><%=c.name%></h3>
      </div>
    </div>
  <% end %>
<% end %>
</div>

<button class="btn btn-flat large"><%= link_to "Add a Cocktail", new_cocktail_path, class: "link" %></button>

